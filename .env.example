# ====== 数据库配置 ======
# SQLite（开发用）
DATABASE_URL=sqlite:///./ai_images.db
# PostgreSQL示例（生产用）：
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_image_db

# ====== 豆包AI服务配置（火山方舟） ======
DOUBAO_API_KEY=sk-your-doubao-api-key-here-change-this
DOUBAO_API_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_DEFAULT_MODEL=doubao-seedream-4-5-251128
DOUBAO_TIMEOUT=30

# ====== AI提供商选择 ======
AI_PROVIDER=doubao  # doubao 或 openai
ENABLE_MULTI_PROVIDER=false

# ====== 应用基础配置 ======
APP_ENV=development
LOG_LEVEL=INFO
APP_PORT=8000
APP_HOST=0.0.0.0
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-this-in-production-32-chars
API_RATE_LIMIT=10
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ====== 文件存储配置 ======
IMAGE_STORAGE_PATH=./static/images
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=jpg,png,jpeg,webp
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
IMAGE_QUALITY=85
IMAGE_FORMAT=jpeg

# ====== 任务配置 ======
TASK_TIMEOUT_SECONDS=120
TASK_MAX_RETRIES=3
TASK_QUEUE_MAX_SIZE=100
CLEANUP_COMPLETED_TASKS_DAYS=7
CLEANUP_FAILED_TASDS_DAYS=30

# ====== 安全配置 ======
# 重要：必须是32个字符，用于加密数据库中的API密钥
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_API_KEY_AUTH=false
ENABLE_USER_AUTH=false
